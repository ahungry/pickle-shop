{
  "compilerOptions": {
    "allowJs": true,
    "outDir": "./lib",
    "declaration": true,
    "declarationDir": "./lib",
    "sourceMap": true,
    "noImplicitAny": true,
    "noResolve": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "types": [
      "cucumber",
      "node"
    ],
    "lib" : ["dom", "es2017"]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./src/bin.ts",
    "./src/**/*.spec.*"
  ]
}
